<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
<!--            <PatternLayout pattern="%highlight{%-5p %c{1} - %m%n}{STYLE=LOGBACK}" />-->
            <PatternLayout pattern="%d{dd/MM/yyyy} %-5p - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConsoleAppender" />
        </Root>
    </Loggers>
</Configuration>